// ==============================
// PRISMA CONFIG
// ==============================
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// ENUMI (ULOGE)
// ==============================
enum Role {
  KUPAC
  KUVAR
  ADMIN
}

// ==============================
// USER (KORISNICI)
// ==============================
model User {
  id           String   @id @default(cuid())
  email        String   @unique

  firstName    String?
  lastName     String?
  phone        String?  @unique

  name         String?
  passwordHash String
  role         Role     @default(KUPAC)
  isBlocked    Boolean  @default(false)
  isPremium    Boolean @default(false)


  recipes      Recipe[]
  favorites    Favorite[]
  reviews      Review[]
  cart         Cart?
  orders       Order[]
  sessions     Session[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ==============================
// SESSION (LOGIN SESIJE)
// ==============================
model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

// ==============================
// CATEGORY (KATEGORIJE RECEPATA)
// ==============================
model Category {
  id      String  @id @default(cuid())
  name    String  @unique
  recipes Recipe[]
}

// ==============================
// RECIPE (RECEPTI)
// ==============================
model Recipe {
  id              String   @id @default(cuid())
  title           String
  description     String
  difficulty      Int
  prepTimeMinutes Int
  imageUrl        String?
  isPublished     Boolean  @default(false)
  isPremium Boolean @default(false)


  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  ingredients RecipeIngredient[]
  steps       Step[]
  favorites   Favorite[]
  reviews     Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([categoryId])
  @@index([isPublished])
}

// ==============================
// INGREDIENT (SASTOJCI)
// ==============================
model Ingredient {
  id    String @id @default(cuid())
  name  String @unique

  recipes RecipeIngredient[]
}

// ==============================
// RECIPE ↔ INGREDIENT (SPOJNA)
// ==============================
model RecipeIngredient {
  recipeId     String
  ingredientId String
  quantity     Float
  unit         String

  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@id([recipeId, ingredientId])
  @@index([ingredientId])
}

// ==============================
// STEP (KORACI PRIPREME)
// ==============================
model Step {
  id         String @id @default(cuid())
  recipeId   String
  stepNumber Int
  text       String

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([recipeId, stepNumber])
  @@index([recipeId])
}

// ==============================
// FAVORITE (OMILJENI)
// ==============================
model Favorite {
  userId   String
  recipeId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@id([userId, recipeId])
  @@index([recipeId])
}

// ==============================
// REVIEW (OCENE I KOMENTARI)
// ==============================
model Review {
  id       String @id @default(cuid())
  rating   Int
  comment  String?

  userId   String
  recipeId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, recipeId])
  @@index([recipeId])
}

// ==============================
// CART (KORPA)
// ==============================
model Cart {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  items     CartItem[]
  updatedAt DateTime @updatedAt
}

// ==============================
// CART ITEM (STAVKE KORPE)
// ==============================
model CartItem {
  id       String @id @default(cuid())
  cartId   String
  name     String
  quantity Float
  unit     String

  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@index([cartId])
}

// ==============================
// ORDER (NARUDŽBINE)
// ==============================
model Order {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  status    String  @default("CREATED")
  items     OrderItem[]
  createdAt DateTime @default(now())

  @@index([userId])
}

// ==============================
// ORDER ITEM
// ==============================
model OrderItem {
  id       String @id @default(cuid())
  orderId  String
  name     String
  quantity Float
  unit     String

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}
